<div class="lg-navigation">
  <ul class="lg-ul">
    <li class="lg-li-1">
      <%= link_to image_tag('backarrow.png', alt: 'Back'), root_path, class: 'lg-nav-link' %>
    </li>
    <p class="lg-p-1">SIGN UP</p>
    <li class="lg-li-2">
      <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "lg-signup-link" %>
    </li>
  </ul>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'lg-form-container' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="lg-div-1 ">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'lg-email-text', placeholder: 'Name' %>
  </div>

  <div class="lg-div-1">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'lg-email-text', placeholder: 'Email' %>
  </div>

  <div class="lg-div-2">
    <%= f.password_field :password, autocomplete: "new-password", class: 'lg-password-text', placeholder: 'Password (6 characters minimum)' %>
  </div>

  <div class="lg-div-2">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'lg-password-text', placeholder: 'Password confirmation' %>
  </div>

  <div class="lg-div-3">
    <%= f.submit "Sign up", class: 'lg-submit-btn' %>
  </div>
<% end %>

