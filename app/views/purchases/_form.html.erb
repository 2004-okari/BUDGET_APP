<%= form_with(model: attributes[0], local: true, class: 'ct-fm-container') do |form| %>
  <% if attributes[0].errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(attributes[0].errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
        <% attributes[0].errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="ct-fm-div-1">
    <%= form.label :name, class: "ct-fm-text-1" %>
    <%= form.text_field :name, class: 'ct-fm-ar-1' %>
  </div>

  <div class="ct-fm-div-1">
    <%= form.label :amount, class: "ct-fm-text-1" %>
    <%= form.text_field :amount, class: 'ct-fm-ar-1' %>
  </div>

  <div class="ct-fm-div-2">
    <%= form.label :category, style: "display: block", class: 'ct-fm-text-2' %>
    <%= form.collection_select :category_id, attributes[1], :id, :name, { prompt: 'Choose category.....' }, class: 'ct-fm-ar-2' %>
  </div>

  <div class="ct-fm-div-3">
    <%= form.submit "Save", class: 'ct-fm-ar-3' %>
  </div>
<% end %>
